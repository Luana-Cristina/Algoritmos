algoritmo "quinto"
var
   n1, n2, soma: inteiro
   media: real
inicio
    Escreval("Digite o 1º número: ")
    Leia(n1)
     Escreval("Digite o 2º número: ")
    Leia(n2)
    soma<-n1+n2
    Escreval("A soma entre o valor", n1, " e ", n2, " é: ", soma)
    media<-(n1+n2)/2
    Escreval ("A média entre o valor", n1, " e ", n2, " é: ", media)
fimalgoritmo